@{
    ViewData["Title"] = "About Us";
}

<section class="relative bg-gradient-to-br from-blue-600 to-purple-600 py-20 text-white">
    <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
        <h1 class="mb-6 text-4xl font-bold md:text-5xl">About Our Store</h1>
        <p class="mx-auto max-w-3xl text-xl text-blue-100 md:text-2xl">
            Your trusted destination for quality products and exceptional service since 2020
        </p>
    </div>
</section>

<section class="bg-white py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
            <div>
                <h2 class="mb-6 text-3xl font-bold text-gray-900 md:text-4xl">Our Story</h2>
                <div class="space-y-4 text-lg text-gray-600">
                    <p>
                        Founded in 2020, our e-commerce platform was born from a simple idea: to make quality products accessible to everyone, everywhere. What started as a small online shop has grown into a thriving marketplace serving thousands of satisfied customers.
                    </p>
                    <p>
                        We believe that shopping online should be easy, secure, and enjoyable. That's why we've built a platform that prioritizes user experience, product quality, and customer satisfaction above all else.
                    </p>
                    <p>
                        Today, we're proud to offer an extensive catalog of products across multiple categories, from electronics and fashion to home goods and beauty products. Our commitment to excellence drives everything we do.
                    </p>
                </div>
            </div>
            <div class="relative">
                <div class="rounded-3xl bg-gradient-to-br from-blue-100 to-purple-100 p-12 shadow-2xl">
                    <div class="grid grid-cols-2 gap-6">
                        <div class="rounded-2xl bg-white p-6 text-center shadow-lg">
                            <div class="mb-2 text-4xl font-bold text-blue-600">10K+</div>
                            <div class="font-medium text-gray-600">Happy Customers</div>
                        </div>
                        <div class="rounded-2xl bg-white p-6 text-center shadow-lg">
                            <div class="mb-2 text-4xl font-bold text-purple-600">50K+</div>
                            <div class="font-medium text-gray-600">Products Sold</div>
                        </div>
                        <div class="rounded-2xl bg-white p-6 text-center shadow-lg">
                            <div class="mb-2 text-4xl font-bold text-green-600">98%</div>
                            <div class="font-medium text-gray-600">Satisfaction Rate</div>
                        </div>
                        <div class="rounded-2xl bg-white p-6 text-center shadow-lg">
                            <div class="mb-2 text-4xl font-bold text-pink-600">24/7</div>
                            <div class="font-medium text-gray-600">Support Available</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-gray-50 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-12 text-center">
            <h2 class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl">Our Core Values</h2>
            <p class="text-xl text-gray-600">The principles that guide everything we do</p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
            <div class="rounded-2xl bg-white p-8 shadow-lg transition duration-300 hover:shadow-xl">
                <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-blue-100">
                    <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                    </svg>
                </div>
                <h3 class="mb-3 text-xl font-bold text-gray-900">Quality First</h3>
                <p class="text-gray-600">We carefully select every product to ensure it meets our high standards of quality and durability.</p>
            </div>

            <div class="rounded-2xl bg-white p-8 shadow-lg transition duration-300 hover:shadow-xl">
                <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-purple-100">
                    <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
                <h3 class="mb-3 text-xl font-bold text-gray-900">Customer-Centric</h3>
                <p class="text-gray-600">Your satisfaction is our priority. We're here to make your shopping experience seamless and enjoyable.</p>
            </div>

            <div class="rounded-2xl bg-white p-8 shadow-lg transition duration-300 hover:shadow-xl">
                <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-green-100">
                    <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <h3 class="mb-3 text-xl font-bold text-gray-900">Innovation</h3>
                <p class="text-gray-600">We continuously improve our platform and services to provide you with the best shopping experience.</p>
            </div>
        </div>
    </div>
</section>

<section class="bg-white py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mb-12 text-center">
            <h2 class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl">Why Choose Us?</h2>
            <p class="text-xl text-gray-600">What makes us different from the rest</p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100">
                        <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 class="mb-2 text-lg font-bold text-gray-900">Wide Product Selection</h3>
                    <p class="text-gray-600">Browse thousands of products across multiple categories, all in one convenient location.</p>
                </div>
            </div>

            <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-purple-100">
                        <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 class="mb-2 text-lg font-bold text-gray-900">Competitive Prices</h3>
                    <p class="text-gray-600">We offer great value for money with regular discounts and special promotions.</p>
                </div>
            </div>

            <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-green-100">
                        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 class="mb-2 text-lg font-bold text-gray-900">Fast & Secure Shipping</h3>
                    <p class="text-gray-600">Quick delivery with tracking and secure packaging to ensure your items arrive safely.</p>
                </div>
            </div>

            <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-pink-100">
                        <svg class="h-6 w-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 class="mb-2 text-lg font-bold text-gray-900">Excellent Customer Service</h3>
                    <p class="text-gray-600">Our dedicated support team is available 24/7 to assist you with any questions or concerns.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-gradient-to-r from-blue-600 to-purple-600 py-16 text-white">
    <div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
        <h2 class="mb-4 text-3xl font-bold md:text-4xl">Ready to Start Shopping?</h2>
        <p class="mb-8 text-xl text-blue-100">Join thousands of happy customers and discover amazing products today</p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
            <a asp-controller="Home" asp-action="Index" class="rounded-xl bg-white px-8 py-4 text-lg font-semibold text-purple-600 shadow-lg transition duration-300 hover:bg-gray-100">
                Browse Products
            </a>
            <a asp-controller="Contact" asp-action="Index" class="rounded-xl border-2 border-white bg-transparent px-8 py-4 text-lg font-semibold text-white transition duration-300 hover:bg-white hover:text-purple-600">
                Contact Us
            </a>
        </div>
    </div>
</section>